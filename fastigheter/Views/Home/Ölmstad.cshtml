    }

    .gallery {
        padding: 20px 0;
    }

        .gallery img {
            background-color: #ffffff;
            padding: 15px;
            width: 100%;
            max-height: 100%;
            box-shadow: 0 0 15px rgba(0,0,0,0.3);
            cursor: pointer;
            height: 200px;
