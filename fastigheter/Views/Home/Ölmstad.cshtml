@{
    ViewData["Title"] = "Våra lägenheter";

    var ölmstad = new List<string>
    {
        "/images/bunnvägen/lm1.jpg",
        "/images/bunnvägen/lm2.jpg",
        "/images/bunnvägen/lm3.jpg",
        "/images/bunnvägen/lm4.jpg",
        "/images/bunnvägen/lm5.jpg"
    };
}
<script>
    document.addEventListener("click", function (e) {
        if (e.target.classList.contains("gallery-item") || e.target.classList.contains("play-button")) {
            console.log("yay");
            const src = e.target.getAttribute("src");
            const substr = src.substring(src.length - 4);
            if (substr == "webm") {
                document.querySelector(".modal-video").src = src;
                const myModalVid = new bootstrap.Modal(document.getElementById('gallery-modal-video'));
                myModalVid.show();
            }
            else {
                document.querySelector(".modal-img").src = src;
                const myModal = new bootstrap.Modal(document.getElementById('gallery-modal'));
                myModal.show();
            }
        }
    })

</script>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<div class="textArea">
    <div class="row">
        <div class="col-6">
            <h2>Ölmstad</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div id="textField">
                <h3>Vi förvaltar 21 lägenheter i samhället Ölmstad.</h3>
                <a></a>
                <p>På Bunnvägen förvaltar vi 21 lgh (från 2 rok till 4rok). Byggår: 2002-2004</p>
            </div>
        </div>
    </div>
    <section class="gallery">
        <div class="container-lg">
            <div class="row gy-4 row-cols-1 row-cols-sm-2 row-cols-md-3">
                <div class="video-container">
                    <video loop muted class="gallery-item" src="/videos/ölmBoomerang.webm">
                        <source src="/videos/ölmBoomerang.webm" />
                    </video>
                    <div class="play-button" src="/videos/ölmBoomerang.webm">
                        <div class="videotitle">
                            Boomerang
                        </div>
                    </div>
                </div>
                @foreach (var url in ölmstad)
                {
                    <div class="col">
                        <img class="gallery-item" src="@url" alt="image">
                    </div>
                }
            </div>
        </div>
    </section>
</div>

<!-- Modal -->
<div class="modal fade" id="gallery-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <!--<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>  -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img src="images/fakeLogo.png" class="modal-img" alt="modal img">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="gallery-modal-video" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <!--<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>  -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <video autoplay mute loop src="/images/headerImgsmall.png" class="modal-video" alt="modal video"> </video>
            </div>
        </div>
    </div>
</div>

