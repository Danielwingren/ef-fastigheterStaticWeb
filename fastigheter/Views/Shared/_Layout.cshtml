<!DOCTYPE html>
@{
    const string mediaUrl = "https://edvardssonstorage.blob.core.windows.net/media/";
    const string token = "?sp=r&st=2022-12-28T08:43:03Z&se=2025-12-28T16:43:03Z&sv=2021-06-08&sr=c&sig=I9u6ktGoHuQaKt1EvmxIUPFJU23ZJi1iFCIMmXMYgRY%3D";
    const string url = mediaUrl + "fakeLogo.png" + token;
}
<html lang="en">
<head>
    <meta name="google-site-verification" content="Uoul12Tx2BY8mI80_AOFJ2ZKRpNen84qQCf735hTLN0" />
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="icon" type="/images/favicon.ico" href="/images/favicon.ico">
    <title>Edvardsson Fastigheter</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</head>
<body background-image="fastigheter\images\rippade\bg.jpg" background-repeat="no-repeat” background-size="cover”>
<div class="logoSpace">
        <!--<img src="/images/header3.jpg" height="150px" alt="">-->
        <video autoplay loop muted plays-inline>
            <source src="/videos/headerMovie2lowerRes.webm" />
            <div class="centered">
                <p>Centered</p>
            </div>
        </video>
</div>
<header>
    <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!--Section: big screen navbar dropdown-->
            <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 nav justify-content-center">
                    <li class="nav-item">
                            <a asp-action="Index" asp-area="" asp-controller="Home" class="nav-link text-dark">Startsida</a>
                    </li>
                    <li class="nav-item d-none d-md-block">
                        <div class="dropdown" asp-area="" asp-controller="Home" asp-action="Lägenheter">
                                <a class="nav-link text-dark">Våra fastigheter ▾</a>
                            <div class="dropdown-content">
                                <a class="nav-link-border" asp-area="" asp-controller="Home" asp-action="Skärstad"> Skärstad</a>
                                <a class="nav-link-border" asp-area="" asp-controller="Home" asp-action="Ölmstad"> Ölmstad</a>
                            </div>

                        </div>
                    </li>
                    
                    <!--Section: small screen menu dropdown-->
                    <li class="nav-item dropdown d-md-none">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="False">
                                Våra fastigheter 
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Skärstad" style="margin-left: 8px"> Skärstad</a>
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Ölmstad" style="margin-left: 8px"> Ölmstad</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Boende">För våra hyresgäster</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-2">
        @RenderBody()
    </main>
</div>

<footer class="footer" style="background-color:rgba(255,255,255,0.9)">
    <div class="container">
        &copy; @DateTime.Now.Year - fastigheter - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .nav-link-border{
        border-style: ridge;
        border-width: 1px;
        border-color:lightgrey;
        font-size: 14px;
        color:black;
    }
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: rgba(255,255,255,.95);
        min-width: 100%;
        z-index: 1;
       
    }
        .dropdown-content a {
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
            .dropdown-content a:hover {
                color: white;
                font-size: 100%;
                
            }
            .dropdown {
        display: block;
        color: #0d6efd;
        text-decoration: none;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
        --bs-text-opacity: 1;
        color: rgba(var(--bs-dark-rgb), var(--bs-text-opacity)) !important;
        }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .navbar a:hover, .dropdown:hover .dropbtn, .dropbtn:focus {
            background-color: rgba(0,0,0,.35);
        
        }



    .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.9);
    }

    .logoSpace {
        position: relative;
        color: white;
        display: flex;
        object-fit: fill;
        background-color: white;
        height: 200px;
        z-index: -1;
        justify-content: center;
    }
    
    .headerVideo {
        width:100%;
        height:100%;
        bottom: 50px;
        object-fit:cover;
        z-index:0;
    }

    .centered {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
    }

</style>